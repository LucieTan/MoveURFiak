<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moveurfiak">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/logo_muf"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_muf"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoveUrFiak">
        <activity android:name="application.ProfilActivity"/>
        <activity android:name="Meteo.MeteoActivity" />
        <activity android:name="Meteo.cityFinder" />
       <activity
            android:name="jeuCalcul.CalculActivity"
            android:parentActivityName=".Accueil" />
        <activity
            android:name="reveil.AlarmActivity"
            android:parentActivityName=".Accueil" />
        <activity
            android:name="memory.Memory"
            android:parentActivityName=".Accueil" />
        <activity
            android:name="clicker.MeteoClickerActivity"
            android:parentActivityName=".Accueil" />
        <activity android:name=".Accueil"/>
        <activity android:name=".Register" />
        <activity android:name=".Login" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <service
            android:name="reveil.AlarmService"
            android:enabled="true" />
    </application>

</manifest>